{
  "name": "@kibibit/announce-it",
  "version": "2.0.0-next.2",
  "description": "Announcing your Releases To Twitter",
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "files": [
    "/lib",
    "/bin"
  ],
  "bin": {
    "announce-it": "bin/announce-it-cli.js"
  },
  "scripts": {
    "build": "tsc",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint": "eslint src/**/*.ts",
    "semantic-release": "semantic-release",
    "start:dev": "ts-node ./src/announce-it-cli.ts",
    "start": "node ./bin/announce-it-cli.js",
    "test:watch": "jest --watchAll --coverage",
    "test": "jest --coverage",
    "start:ci": "npm start -- --branch master"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kibibit/announce-it.git"
  },
  "author": "ZimGil <ZimGil@kibibit.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Kibibit/announce-it/issues"
  },
  "homepage": "https://github.com/Kibibit/announce-it#readme",
  "announcements": {
    "tweet": "We have an announcement!\n<%= package %> <%= version %> is now live!\n\nGo check it out: <%= npmpage %>"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@semantic-release/npm": "^7.0.9",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/dotenv": "^6.1.1",
    "@types/find-root": "^1.1.2",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.167",
    "@types/nconf": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "all-contributors-cli": "^6.19.0",
    "commitizen": "^4.3.0",
    "coveralls": "3.0.9",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.17.0",
    "eslint-plugin-jest": "^24.1.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "jest-github-actions-reporter": "^1.0.3",
    "jest-stare": "^2.2.0",
    "npm-check": "^5.9.2",
    "semantic-release": "^17.3.3",
    "semantic-release-cli": "^5.4.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "find-root": "^1.1.0",
    "fs-extra": "^9.0.1",
    "lodash": "^4.17.20",
    "manakin": "^0.5.2",
    "nconf": "^0.11.1",
    "twitter-lite": "^0.14.0"
  },
  "jest-stare": {
    "resultDir": "test-results/",
    "coverageLink": "../coverage/index.html"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
